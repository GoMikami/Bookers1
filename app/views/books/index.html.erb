<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
        <span class="book-title"><%= link_to book.title, book_path(book) %></span>
        <span class="book-body"><%= link_to book.body, book_path(book) %></span>
      </tr>
      <% end %>
    </tbody>
  </table>


<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>


  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>