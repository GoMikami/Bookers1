  <body>
    <h1>Editing Book</h1>
    
    <%= form_with model:@book, local:true do |f| %>
      <div class>
	    <% if @book.errors.any? %>
	    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</2>
    	<ul><% @book.errors.full_messages.each do |message| %><li><%= message %></li></ul>
    	</div>
        <% end %>
      <% end %>
    
    <div class="field">
	  <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
    </div>

    <div class="actions"><%= f.submit 'Update Book' %></div>
		<div><%= link_to "Show",book_path %>|<%= link_to "Back", books_path %></div>
		<% end %>
	</body>